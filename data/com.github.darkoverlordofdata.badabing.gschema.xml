<schemalist>
  <schema id="com.github.darkoverlordofdata.badabing" path="/com/github/darkoverlordofdata/badabing/" gettext-domain="com.github.darkoverlordofdata.badabing">

    <key name="dark" type="b">
      <default>false</default>
      <summary>Dark Theme</summary>
      <description>Use dark theme in application.</description>
    </key>

    <key name="indicator" type="b">
        <default>false</default>
        <summary>Use indicator</summary>
        <description>Mark to use app indicator and minimized to system tray.</description>
    </key>

    <key name="minimized" type="b">
        <default>false</default>
        <summary>Minimized on start</summary>
        <description>When use indicator, start with minimized window.</description>
    </key>

    <key name="start-on-boot" type="b">
      <default>false</default>
      <summary>Start on boot</summary>
      <description>Start application when user log into the desktop.</description>
    </key>

    <key name="tray-icon" type="b">
      <default>false</default>
      <summary>Enable tray icon</summary>
      <description>Add a tray icon for the app.</description>
    </key>

    <key name="use-cron-job" type="b">
      <default>false</default>
      <summary>Use crontab jobs</summary>
      <description>Use a crontab job to update daily.</description>
    </key>

    <key name="create-lock-assets" type="b">
      <default>false</default>
      <summary>Create lock screen assets</summary>
      <description>Create assets for Catlock.</description>
    </key>

    <key name="maximum" type="i">
        <default>7</default>
        <summary>Maximum count</summary>
        <description>Maximum number of wallpapers to keep.</description>
    </key>

    <key name="xml" type="b">
        <default>false</default>
        <summary>Source format</summary>
        <description>Xml (true), or Json (false).</description>
    </key>

    <key name="locale" type="s">
      <default>"US-en"</default>
      <summary>Image Locale</summary>
      <description>Source of images</description>
    </key>

    <key name="resolution" type="s">
      <default>"1900x1200"</default>
      <summary>Sceen Resolution</summary>
      <description>Target resolution</description>
    </key>

    <key name="image-path" type="s">
      <default>"~/Wallpapers/badabing.jpg"</default>
      <summary>Wappaper Image</summary>
      <description>Wallpaper image</description>
    </key>

  </schema>
</schemalist>
